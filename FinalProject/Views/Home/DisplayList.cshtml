@{
    ViewData["Title"] = "Movie List";
}
@model List<UserMovie>


@if (ViewBag.MovieExitsInWatchedList != null)
{
    <p>@ViewBag.MovieExitsInWatchedList</p>
}

<table class="table table-bordered">
    @foreach (UserMovie m in Model)
    {
        <tr>
            <td><a href="../Home/MovieSelection?id=@m.MovieId">@m.Title</a></td>
            <td>@m.Watched</td>
            <td>@m.WatchLocation</td>
            <td>@m.WatchYear</td>
            <td>@m.UserRating</td>
            <td>@m.UserReview</td>
            <td><a href="../Home/UpdateMovie?id=@m.Id">Update Movie</a></td>
            <td class="btn-outline-danger" onclick="return confirm('Are you sure, you want to delete this movie?')"><a href="../Home/DeleteMovie?id=@m.Id">Delete Movie</a></td>
        </tr>
    }


</table>
<button type="button" class="btn btn-info" a href="../Home/Search">Movie Search</button>