@{
    ViewData["Title"] = "Movie Selection";
}
@model PopcornMovie

<p>@Model.Title</p>
<br />
<img src="@Model.Poster" width="200" height="300" />
<br />
<p>@Model.Plot</p>
<br />
<p>@Model.Genre</p>
<br />
<p><a href="../Recommendation/GetMoviesByDirector?name=@Model.Director">@Model.Director</a></p>
<br />
<p>@Model.Actors</p>
<p>@Model.Year</p><br/>
<a href="../Home/AddtoWatchedList?id=@Model.imdbID" class="btn btn-primary btn-sm btn btn-outline-success">Add To List</a><br/>
<a href="../Recommendation/GetMoviesOfDecade?year=@Model.Year">Get other movies of this decade</a>




