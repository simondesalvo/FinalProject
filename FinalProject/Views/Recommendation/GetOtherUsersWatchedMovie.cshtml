@model List<UserNameUserMovieVM>
@{
    ViewData["Title"] = "GetOtherUsersWatchedMovie";
}

@if (Model.Count == 0)
{
    <p>No other user has watched this movie.</p>
    <p>Be the first one to watch it and don't forget to rate it and write a review!!</p>
}
else
{
    <h4>Here are other users who have watched @Model[0].userMovie.Title</h4>
    <table class="table table-bordered">
        <tr>
            <th>Username</th>
            <th>Movie Title</th>
            <th>User Rating</th>
            <th>User Review</th>
        </tr>
        <tr>
            @foreach (UserNameUserMovieVM item in Model)
            {

                <td>@item.UserName</td>
                <td>@item.userMovie.Title</td>
                @if (@item.userMovie.UserRating > 0)
                {
                    <td>@item.userMovie.UserRating</td>
                }
                else
                {
                    <td>Movie not rated</td>
                }
                @if (item.userMovie.UserReview != null)
                {
                    <td>@item.userMovie.UserReview</td>
                }
                else
                {
                    <td>Not yet reviewed</td>
                }
             }
        </tr>
    </table>
}
        
        


